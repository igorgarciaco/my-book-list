<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/cadastro_livro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_update_livro"
        android:layout_width="match_parent"
        android:layout_margin="28dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="2"
        android:text="@string/updage_book"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/button_list_livro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_list_livro"
        app:layout_constraintTop_toBottomOf="@+id/button_list_livro" />

    <Button
        android:id="@+id/button_add_livro"
        android:layout_width="match_parent"
        android:layout_margin="28dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:ems="2"
        android:text="@string/new_book"


        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/cadastro_livro_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadastro_livro_text"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_livro_text" />

    <Button
        android:id="@+id/button_list_livro"
        android:layout_width="match_parent"
        android:layout_margin="28dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="2"
        android:text="@string/show_books"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/button_add_livro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_add_livro"
        app:layout_constraintTop_toBottomOf="@+id/button_add_livro" />

</androidx.constraintlayout.widget.ConstraintLayout>